{% include '__per-row' %}

<h1 class="page-header">Product Collections</h1>

{% if settings.featured-collections-linklist == '' %}
  {% paginate collections by settings.default-pagination %}
  {% if collections.size > 0 %}
    <div class="row">
    {% for collection in collections %}
      {% include '_collection' with collection %}
      {% include '_end_row' %}
    {% endfor %}
    </div>
    {% include 'pagination' %}
  {% else %}
    <div class="alert alert-info text-center">
      <h3><i class="fa fa-info-circle"></i> No collections found.</h3>
    </div>
  {% endif %}
  {% endpaginate %}
{% else %}
  {% include 'list-collections' %}
{% endif %}
